<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_mediumAnimTime">
    <item android:state_pressed="true">
        <layer-list>
            <!--距离 上侧  -2dp的高度 变相去掉线 -->
            <item android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#c0bebe" />
                    <corners android:radius="1dp" />
                    <solid android:color="@color/classicNavItemClickColor" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!--距离 上侧  -2dp的高度 变相去掉线 -->
            <item android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#c0bebe" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>